<UserControl x:Class="PTW_Load.MeasureItem.Spot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid Width="80" Height="52">
        <Rectangle Height="3" HorizontalAlignment="Left" Margin="2,15,0,0" Stroke="White" Fill="Black" VerticalAlignment="Top" Width="15" />
        <Rectangle Height="15" HorizontalAlignment="Left" Margin="8,9,0,0" Stroke="White" Fill="Black" VerticalAlignment="Top" Width="3" />
        <Label Content="1" Height="18" HorizontalAlignment="Left" Margin="0,34,0,0" Name="label" VerticalAlignment="Top" Background="AliceBlue"  Padding="0,0,0,0" VerticalContentAlignment="Stretch" FontSize="10"/>
        <TextBox Text="0" Width="40" Height="20" HorizontalAlignment="Center" Name="value" VerticalAlignment="Center"  Background="AliceBlue"  Padding="0,0,0,0" VerticalContentAlignment="Stretch"  FontSize="15"/>
        
    </Grid>
</UserControl>
